<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Fondo suave -->
    <solid android:color="#F8F6E3"/>

    <!-- Bordes redondeados -->
    <corners android:radius="16dp"/>

    <!-- Borde gris claro -->
    <stroke
        android:width="1dp"
        android:color="#E0E0E0" />

    <!-- Padding interno -->
    <padding
        android:left="12dp"
        android:top="6dp"
        android:right="12dp"
        android:bottom="6dp" />
</shape>
