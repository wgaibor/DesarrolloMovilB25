<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dimen_5dp"
    app:cardCornerRadius="@dimen/dimen_8dp"
    app:cardElevation="@dimen/dimen_5dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:padding="@dimen/dimen_tarjeta"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/img_personaje"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_launcher_background" />

        <TextView
            android:id="@+id/tv_nombre_personaje"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dimen_5dp"
            android:textStyle="bold"
            android:textSize="@dimen/dimen_texto_20sp"
            android:textColor="@color/orange"
            android:text="Personaje"/>

        <TextView
            android:id="@+id/tv_trabajo_personaje"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dimen_5dp"
            android:text="Trabajo"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/dimen_5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_edad_personaje"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_marginRight="@dimen/dimen_5dp"
                android:background="@drawable/rectangle_textview"
                android:text="Edad"/>

            <TextView
                android:id="@+id/tv_vivo_personaje"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_marginLeft="@dimen/dimen_5dp"
                android:background="@drawable/rectangle_alive_textview"
                android:text="Vivo/Muerto"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_frase_personaje"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dimen_5dp"
            android:textStyle="italic"
            android:text="Frase"/>

    </LinearLayout>


</androidx.cardview.widget.CardView>